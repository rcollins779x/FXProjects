        <font>
            <Font size="14.0" />
        </font>
    </Label>
   <Button fx:id="reset" alignment="CENTER" contentDisplay="CENTER" maxHeight="50.0" maxWidth="100.0" mnemonicParsing="false" onAction="#onActionClear" text="Clear" textAlignment="CENTER" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2">
      <font>
         <Font size="15.0" />
      </font>
   </Button>
